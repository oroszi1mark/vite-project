{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    //#region Config for VS Code to understand '@/' root imports
    // https://stackoverflow.com/a/64511851
    "baseUrl": ".",
    "paths": {
        "@/*": [
          "src/*"
        ]
    },
    //#endregion
  },
  "include": ["./src"],
}
